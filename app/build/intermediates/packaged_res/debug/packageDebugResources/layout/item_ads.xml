<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:background="@drawable/bg_radius_label"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="16dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_marginBottom="12dp">

           <ImageView
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/img"
               android:contentDescription="Info" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="StreamYard is a live streaming studio"
               android:textSize="14sp"
               android:textStyle="bold"
               android:padding="4dp"/>
       </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="CapCut is a free video editing application on Android and iOS platforms."
           android:textSize="10sp"
           android:layout_marginBottom="4dp"/>

       <ImageView
           android:id="@+id/imageView2"
           android:layout_width="match_parent"
           android:layout_height="124dp"
           android:src="@drawable/banner"
           android:scaleType="centerCrop"
           android:layout_marginBottom="12dp" />


       <Button
           android:id="@+id/btn_dowload"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Dowload"
           android:background="@null"
           android:backgroundTint="#22B9FF"/>
   </LinearLayout>

</LinearLayout>
